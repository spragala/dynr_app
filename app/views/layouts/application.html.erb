<!DOCTYPE html>
<html>
  <head>
    <title>Dynr</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'plate-fork.svg' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav-bar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header col-xs-12">
          <h1 class="navbar-text navbar-left"> Dynr </h1>
          <% if signed_in? %>
            <!-- <p class="navbar-text navbar-right">Signed in as: <%= current_user.email %></p> -->
            <%= button_to 'Sign out', sign_out_path, method: :delete, class: 'btn btn-default navbar-btn sign-out pull-right' %>
            <%= link_to "New Restaurant", new_restaurant_path, class: 'btn btn-primary navbar-btn new-restaurant' %>
          <% else %>
            <%= link_to 'Sign up', sign_up_path, class: 'btn btn-default sign-in navbar-btn pull-right' %>
          <% end %>
        </div>
      </div>
    </nav>
    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
