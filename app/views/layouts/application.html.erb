<!DOCTYPE html>
<html>
  <head>
    <title>Dynr</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'plate-fork.svg' %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:900" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav-bar navbar-fixed-top" id="startchange">
      <div class="container-fluid">
        <div class="navbar-header col-sm-6 col-md-12">
          <%= link_to 'Dynr', restaurants_path, class: 'navbar-text navbar-left title' %>
          <% if signed_in? %>
            <%= button_to 'Sign out', sign_out_path, method: :delete, class: 'btn btn-default navbar-btn sign-out pull-right' %>
            <%= link_to "New Restaurant", new_restaurant_path, class: 'btn btn-primary navbar-btn new-restaurant' %>
          <% else %>
            <%= link_to 'Sign up', sign_up_path, class: 'btn btn-default sign-in navbar-btn pull-right' %>
          <% end %>
        </div>
      </div>
    </nav>
    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
