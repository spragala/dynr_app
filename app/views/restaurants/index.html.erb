

<div class='container'>
  <div class='col-xs-12'>
  <h1 class='index-title'> Restaurants </h1>
  </div>
  <br>

  <% @restaurants.each do |rest| %>
      <div class='row restaurant-row'>
        <div class='col-xs-4 col-md-2 image'>
          <img src='<%= rest.image %>'/>
        </div>
        <div class='col-xs-5 col-md-4'>
          <h4 class='rest-name'><%= rest.name %></h4>
          <p class='rest-address'><%= rest.address %></p>
          <p class='rest-style'><em><%=rest.style %></em></p>
        </div>
        <div class='col-xs-4 notes'>
          <p><strong>Notes:</strong></p>  
        </div>
        <div>
          <%= link_to '', restaurant_path(rest), method: :delete, class: 'btn btn-default pull-right delete-btn glyphicon glyphicon-trash' %>
        </div>
      </div>
      <hr>
  <% end %>
</div>
